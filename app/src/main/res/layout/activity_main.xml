<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ebill.com.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transportation type"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerTransType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:entries="@array/transportation" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtRecGstIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Recipientâ€™s GSTIN"
            android:maxLength="15" />

        <EditText
            android:id="@+id/txtPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:inputType="number"
            android:maxLength="6" />

        <EditText

            android:id="@+id/txtBillNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bill No"
            android:inputType="phone"
            android:maxLength="15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.6"
                android:text="Bill Date"
                android:paddingLeft="5dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtBillDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="5"
                android:text="Select date"
                android:textSize="18sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/txtBillValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bill Value"
            android:inputType="numberDecimal"
            android:maxLength="15" />

        <EditText
            android:id="@+id/txtHsnCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HSN code"
            android:inputType="number"
            android:maxLength="10" />

        <EditText
            android:id="@+id/txtDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Approx distance (in km)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/txtVehicalNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehical no" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="onSubmitClicked"
            android:text="Submit" />

    </LinearLayout>


</ScrollView>
