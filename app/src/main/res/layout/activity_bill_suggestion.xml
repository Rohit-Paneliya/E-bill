<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="ebill.com.BillSuggestionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/bill_suggestion"
        android:textColor="#595959"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/bill_suggestion1"
        android:textColor="#595959"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/bill_suggestion2"
        android:textColor="#595959"
        android:textSize="16sp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blue_rounded_corner_button"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="onOkClicked"
        android:text="@string/share"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading"
            android:layout_weight="1"
            android:background="@drawable/green_rounded_corner_button"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="onGenerateClicked"
            android:padding="8dp"
            android:text="@string/generate_e_bill"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/heading"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:background="@drawable/red_rounded_corner_button"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="onCancelBillClicked"
            android:padding="8dp"
            android:text="@string/cancel_e_bill"
            android:textAllCaps="false"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/blue_rounded_corner_button"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="onDownloadButtonClicked"
        android:padding="8dp"
        android:text="@string/download_e_way_bill"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>
